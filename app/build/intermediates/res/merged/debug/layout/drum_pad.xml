<?xml version="1.0" encoding="utf-8"?>
<com.comp4905.jasonfleischer.midimusic.views.DrumPad
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<RelativeLayout android:id="@+id/drum_pad_base"
		android:layout_width="@dimen/drum_pad_width" android:layout_height="@dimen/drum_pad_height"
		android:layout_margin="2dp" android:background="@drawable/conatiner_shape">
		<ImageView android:id="@+id/drum_pad_wrench"
			android:visibility="gone" android:layout_width="25dp"
			android:layout_height="25dp" android:layout_margin="8dp"
			android:layout_marginTop="5dp" android:background="@drawable/wrench"
			android:contentDescription="@null" />
		<TextView android:visibility="@string/hidden" android:id="@+id/drum_pad_label"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingLeft="8dp" android:paddingBottom="5dp"
			android:layout_alignParentBottom="true" android:textColor="#AAA" />
	</RelativeLayout>
</com.comp4905.jasonfleischer.midimusic.views.DrumPad>
