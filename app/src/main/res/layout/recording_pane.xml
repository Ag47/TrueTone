<?xml version="1.0" encoding="utf-8"?>
<com.comp4905.jasonfleischer.midimusic.views.RecordingPane xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recording_pane_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/conatiner_shape_no_border"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:visibility="@string/hidden">

        <TextView
            android:id="@+id/recording_bpm"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recording_time"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/recording_status"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginRight="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp" />

    <ImageButton
        android:id="@+id/recording_rec_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="@string/descp_record_track"
        android:scaleType="fitCenter"
        android:src="@drawable/record" />

    <ImageButton
        android:id="@+id/recording_loop_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="@string/descp_loop_track"
        android:scaleType="fitCenter"
        android:src="@drawable/loop" />

    <ImageButton
        android:id="@+id/saving_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="save"
        android:scaleType="fitCenter"
        android:src="@drawable/saveicon" />

    <ImageButton
        android:id="@+id/recording_delete_track_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="@string/descp_delete_track"
        android:scaleType="fitCenter"
        android:src="@drawable/delete" />
</com.comp4905.jasonfleischer.midimusic.views.RecordingPane>
